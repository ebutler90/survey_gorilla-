    <h1>Welcome to Survey Gorilla</h1>
    <%end%>
    <p>Channel your inner Freud and find out your demographics deepest desires</p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">+ Create Survey</a></p>
  </div>
</div>


<div class="survey-container">
  <%surveys.each do |survey|%>
  <ul>
    <li><a href="/survey/<%= survey.id%>"><%=survey.title%></a></li>
  </ul>
  <%end%>
</div>
